<% include ../partials/header %>

<div class="col">
    <h1 style="text-align: center;"> Edit Expense</h1>
    <div style="width:30%; margin:25px auto">
        <form action="/expense/<%= expense.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <select class="form-control" name="expense[category]">
                    <option value="-"><small>--Choose an Option!--</small></option>
                    <% categorys.forEach((category)=>{ if(category.name===expense.category.name) { %>
                        <option value="<%= category.name %>" selected><%= category.name %></option>
                    <% }else { %>
                        <option value="<%= category.name %>"><%= category.name %></option>
                    <% }}) %>
                </select>
            </div>   
            <div class="form-group">
                    <input class="form-control" type="text" name="expense[narration]" value="<%= expense.narration %>">
            </div>   
            <div class="form-group">
                <input class="form-control" type="number" name="expense[amount]" value="<%= expense.amount %>" step="1">
            </div> 
            <div class="form-group">
                <input class="form-control" type="text" name="expense[owner]" value="<%= expense.owner %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="expense[vendor]" value="<%= expense.vendor %>">
            </div>   
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>    
        </form>
        <a href="/landing">Back</a>                            
</div>